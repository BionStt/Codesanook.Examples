{
    "extends": [
        "tslint:recommended"
    ],
    "rules": {
        "ordered-imports": false,
        "object-literal-sort-keys": false,
        "no-debugger": false,
        "no-console": false,
        "quotemark": [
            true,
            "single"
        ],
        "no-any": false,
        "semicolon": [
            true,
            "always"
        ],
        "arrow-parens": false,
        "interface-name": false,
        "member-access": false,
        "no-unnecessary-initializer": true,
        "max-line-length": false
    },
    "linterOptions": {
        "exclude": [
            "node_modules/**/*.ts"
        ]
    }
}