 {
     "name": "Trello Point",
     "version": "1.0",
     "description": "Trello point extension",
     "permissions": ["activeTab", "declarativeContent", "tabs"],
     "background": {
         "scripts": ["background.js"],
         "persistent": false
     },
     "content_scripts": [{
         "matches": [
             "https://trello.com/*"
         ],
         "js": [
             "content.js"
         ],
         "css": [
             "content.css"
         ],
         "run_at": "document_idle"
     }],
     "page_action": {
         "default_icon": {
             "16": "images/get_started16.png",
             "32": "images/get_started32.png",
             "48": "images/get_started48.png",
             "128": "images/get_started128.png"
         }
     },
     "icons": {
         "16": "images/get_started16.png",
         "32": "images/get_started32.png",
         "48": "images/get_started48.png",
         "128": "images/get_started128.png"
     },
     "manifest_version": 2
 }